@page
@model TreasureHuntWebApp.Pages.Questions.EditQuestionsModel

@{
    ViewData["Title"] = "EditQuestions";
}

<h2>EditQuestions</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].QuestionNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].Answer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].AnswerIndex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].ClueIndex)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Question) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Answer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnswerIndex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClueIndex)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
