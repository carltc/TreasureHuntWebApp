@page
@model TreasureHuntWebApp.Pages.ChoicesChoices.ChangeChoiceModel

@{
    ViewData["Title"] = "ChangeChoice";
}

<h2>ChangeChoice</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Choice[0].Question)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Choice[0].Choice1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Choice[0].Result1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Choice[0].Choice2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Choice[0].Result2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Choice[0].Choice3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Choice[0].Result3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Choice[0].CorrectAnswer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Choice) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Choice1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Result1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Choice2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Result2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Choice3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Result3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CorrectAnswer)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
