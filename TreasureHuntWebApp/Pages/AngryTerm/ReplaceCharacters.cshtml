@page
@model TreasureHuntWebApp.Pages.AngryTerm.ReplaceCharactersModel

@{
    ViewData["Title"] = "ReplaceCharacters";
}

<h2>ReplaceCharacters</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CrossWord[0].Letter)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CrossWord) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Letter)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
